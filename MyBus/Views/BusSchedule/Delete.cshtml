@model MyBus.Models.BusSchedule

@{
    ViewData["Title"] = "Delete Bus Schedule";
}

<h2>Delete Bus Schedule</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Bus Schedule</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            From
        </dt>
        <dd class="col-sm-10">
            @Model.From
        </dd>
        <dt class="col-sm-2">
            To
        </dt>
        <dd class="col-sm-10">
            @Model.To
        </dd>
        <dt class="col-sm-2">
            Departure Date
        </dt>
        <dd class="col-sm-10">
            @Model.DepartureDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Departure Time
        </dt>
        <dd class="col-sm-10">
            @Model.DepartureTime
        </dd>
        <dt class="col-sm-2">
            Arrival Date
        </dt>
        <dd class="col-sm-10">
            @Model.ArrivalDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Arrival Time
        </dt>
        <dd class="col-sm-10">
            @Model.ArrivalTime
        </dd>
        <dt class="col-sm-2">
            Bus Number
        </dt>
        <dd class="col-sm-10">
            @Model.BusNumber
        </dd>
        <dt class="col-sm-2">
            Bus Name
        </dt>
        <dd class="col-sm-10">
            @Model.BusName
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
