@model IEnumerable<MyBus.Models.BusSchedule>

@{
    ViewData["Title"] = "Manage Bus Schedules";
}

<h2>Manage Bus Schedules</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Schedule</a>
</p>

<table class="table text-center">
    <thead>
        <tr>
            <th>From</th>
            <th>To</th>
            <th>Departure Date</th>
            <th>Departure Time</th>
            <th>Arrival Date</th>
            <th>Arrival Time</th>
            <th>Bus Number</th>
            <th>Bus Name</th>
            <th>Bus Type</th>
            <th>Fare</th>
            <th>Total Seat</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.From</td>
                <td>@item.To</td>
                <td>@item.DepartureDate.ToShortDateString()</td>
                <td>@item.DepartureTime</td>
                <td>@item.ArrivalDate.ToShortDateString()</td>
                <td>@item.ArrivalTime</td>
                <td>@item.BusNumber</td>
                <td>@item.BusName</td>
                <td>@item.BusType</td>
                <td>@item.Fare</td>
                <td>@item.TotalSeat</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
