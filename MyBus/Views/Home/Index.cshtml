@using Microsoft.AspNetCore.Identity
@inject SignInManager<Users> signInManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h3 class="display-4">More Routes, More Tickets</h3>
    <p>The No 1 online Bus ticketing Platform in Bangladesh</p>
</div>

<div class="search-box">
    <form asp-action="Search" method="post">
        <div class="form-group">
            <label for="from">From</label>
            <select id="from" name="from" class="form-control">
                @foreach (var location in ViewBag.FromLocations)
                {
                    <option value="@location">@location</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="to">To</label>
            <select id="to" name="to" class="form-control">
                @foreach (var location in ViewBag.ToLocations)
                {
                    <option value="@location">@location</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="travelDate">Travel Date</label>
            <input type="date" id="travelDate" name="travelDate" class="form-control" />
        </div>
        <div class="form-group">
            <label for="busType">Bus Type</label>
            <select id="busType" name="busType" class="form-control">
                <option value="All">All</option>
                <option value="AC">AC</option>
                <option value="Non AC">Non AC</option>
                <option value="Sleeper">Sleeper</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>

@if (ViewBag.Message != null)
{
    <div class="alert alert-warning mt-3">
        @ViewBag.Message
    </div>
}

